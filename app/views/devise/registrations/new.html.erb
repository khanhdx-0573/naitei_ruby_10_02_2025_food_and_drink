<div class="bg-gray-100 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white shadow-md rounded-lg py-10 px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center"><%= t "devise.registrations.sign_up" %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, class: "common-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input-field p-2 w-full" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "common-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field p-2 w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, t("devise.passwords.password"), class: "common-label" %>
        <% if @minimum_password_length %>
          <em class="text-gray-600 text-xs">(<%= t("devise.registrations.minimum_password_length", count: @minimum_password_length) %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-field p-2 w-full" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t("devise.passwords.password_confirmation"), class: "common-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field p-2 w-full" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.registrations.sign_up"), class: "common-button w-full" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
