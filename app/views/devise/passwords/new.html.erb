<div class="bg-gray-100 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white shadow-md rounded-lg py-10 px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center"><%= t "devise.passwords.forgot_your_password" %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "common-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field p-2 w-full" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.passwords.send_reset_password_instructions"), class: "common-button w-full" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
